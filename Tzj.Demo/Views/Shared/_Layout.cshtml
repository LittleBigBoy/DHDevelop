<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="keywords" content="carlink">
    <meta name="description" content="carlink">
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>@ViewData["Title"] - DHDevelop.Web</title>
    <link rel="stylesheet" href="~/Content/css/font/font.css">
    <link rel="stylesheet" href="~/Content/layui/css/layui.css">
    <link rel="stylesheet" href="~/Content/layui/css/admin.css" />
    <link rel="stylesheet" href="~/Content/css/global.css" charset="utf-8">
    <script src="https://cdn.bootcss.com/jquery/3.3.1/jquery.min.js"></script>
    @foreach (string item in ViewBag.Css)
    {
        <link rel="stylesheet" href="@($"~/Content/css/{item}.css")" />
    }

    @foreach (string item in ViewBag.Js)
    {
        <script type="text/javascript" src="@($"/Content/js/{item}.js")"></script>
    }
</head>
<body class="layui-layout-body">

    @RenderBody()

    <script src="~/Content/layui/layui.js"></script>
    <script>
        layui.config({
            base: '../../Content/layui/' //静态资源所在路径
        }).extend({
            index: 'index' //主入口模块
        }).use('index');
    </script>



</body>

</html>